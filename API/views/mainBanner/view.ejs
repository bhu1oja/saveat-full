<%- include('../_includes/header') %>

<div class="container-fluid">
  <div class="row  p-3">
    <h2>View Product</h2>
    <button type="submit" name="btn_add" class="btn  ml-8" value=">">
      <a href="/banner-add/">Add new</a>
    </button>
  </div>

  <% if (count > 0) { %>
  <table class="table">
    <thead>
      <tr>
        <th>Banner Name</th>
        <th>Banner Image</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% mainBanner.forEach(ban => { %>
      <tr>
        <td><%= ban.name%></td>
        <td>
          <img
            src="<%= ban.bannerImage%>"
            alt="<%= ban.bannerImage%>"
            width="42"
            height="42"
          />
        </td>
        <td>
          <button
            type="submit"
            name="btn_delete"
            class="btn btn-success"
            value=">"
          >
            <a href="/banner-edit/<%= ban._id %>">Edit</a>
          </button>
        </td>
        <td>
          <button
            type="submit"
            name="btn_delete"
            class="btn btn-danger"
            value=">"
          >
            <a href="/banner-delete/<%= ban._id %>">Delete</a>
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else {%>
  <h3 class="text-center">There are no Banners.</h3>
  <% }%>
</div>

<%- include('../_includes/footer') %>
